" vim: set filetype=vim:

" Sane hinting mode
set hintfiltermode vimperator-reflow
set hintnames numeric

" Search stuff
set searchengine duckduckgo

set searchurls.devdocs https://devdocs.io/#q=
set searchurls.drive https://drive.google.com/u/1/search?q=
set searchurls.projects https://projects.evoworx.org/search?utf8=✓&group_id=&project_id=&repository_ref=&search=%s
set searchurls.jira https://jira.evoworx.org/secure/QuickSearch.jspa?searchString=
set searchurls.redmine https://redmine.evoworx.org/projects/global/search?utf8=✓&wiki_pages=1&q=
set searchurls.docs https://docs.evoworx.org/search/?q=
set searchurls.pypi https://pypi.org/search/?q=
set searchurls.dd https://app.datadoghq.com/logs?query=

" GMail settings
autocmd DocStart mail.google.com/mail mode ignore
unbindurl mail.google.com/mail --mode=ignore <S-Insert>
unbindurl mail.google.com/mail --mode=ignore <CA-Escape>
unbindurl mail.google.com/mail --mode=ignore <CA-`>
unbindurl mail.google.com/mail --mode=ignore <S-Escape>
unbindurl mail.google.com/mail --mode=ignore <C-^>
unbindurl mail.google.com/mail --mode=ignore I
bindurl   mail.google.com/mail --mode=ignore <C-b> fillcmdline tab
bindurl   mail.google.com/mail --mode=ignore <C-t> fillcmdline tabopen

" Slack settings
autocmd DocStart energysavvy.slack.com mode ignore
unbindurl energysavvy.slack.com --mode=ignore <S-Insert>
unbindurl energysavvy.slack.com --mode=ignore <CA-Escape>
unbindurl energysavvy.slack.com --mode=ignore <CA-`>
unbindurl energysavvy.slack.com --mode=ignore <S-Escape>
unbindurl energysavvy.slack.com --mode=ignore <C-^>
unbindurl energysavvy.slack.com --mode=ignore I
bindurl   energysavvy.slack.com --mode=ignore <C-b> fillcmdline tab
bindurl   energysavvy.slack.com --mode=ignore <C-t> fillcmdline tabopen

" Insperity settings
seturl insperity.com noiframe true " infinite redirect otherwise

" JIRA settings
seturl    jira.evoworx.org allowautofocus true
unbindurl jira.evoworx.org .
unbindurl jira.evoworx.org j
unbindurl jira.evoworx.org k
unbindurl jira.evoworx.org n
unbindurl jira.evoworx.org p

" Gitlab settings
seturl projects.evoworx.org allowautofocus true
