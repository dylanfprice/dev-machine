" vim: set filetype=vim:

set editorcmd kitty --class=tridactyl-editor vim

bind <C-l> tabnext
bind <C-h> tabprev
bind <C-;> fillcmdline tab
bind <C-'> fillcmdline tabopen

" Search stuff
set searchengine duckduckgo

set searchurls.devdocs https://devdocs.io/#q=
set searchurls.drive https://drive.google.com/drive/search?q=
set searchurls.pypi https://pypi.org/search/?q=

" GMail settings
seturl           mail.google.com/mail allowautofocus true
autocmd DocStart mail.google.com/mail mode ignore
bindurl   mail.google.com/mail --mode=ignore <C-;> fillcmdline tab
bindurl   mail.google.com/mail --mode=ignore <C-'> fillcmdline tabopen
bindurl   mail.google.com/mail --mode=ignore <C-f> composite hint -t; mode ignore

" Drive settings
seturl           drive.google.com allowautofocus true
autocmd DocStart drive.google.com mode ignore
bindurl   drive.google.com --mode=ignore <C-;> fillcmdline tab
bindurl   drive.google.com --mode=ignore <C-'> fillcmdline tabopen
bindurl   drive.google.com --mode=ignore <C-f> hint -t; mode ignore

" Docs settings
seturl           docs.google.com allowautofocus true
autocmd DocStart docs.google.com mode ignore
bindurl   docs.google.com --mode=ignore <C-;> fillcmdline tab
bindurl   docs.google.com --mode=ignore <C-'> fillcmdline tabopen
bindurl   docs.google.com --mode=ignore <C-f> hint -t; mode ignore

" Trello settings
seturl           trello.com allowautofocus true
autocmd DocStart trello.com mode ignore
bindurl   trello.com --mode=ignore <C-;> fillcmdline tab
bindurl   trello.com --mode=ignore <C-'> fillcmdline tabopen
bindurl   trello.com --mode=ignore <C-f> hint -t; mode ignore
bindurl   trello.com --mode=ignore <C-i> editor

" Jupyter Lab settings
seturl           localhost:8888/lab allowautofocus true
autocmd DocStart localhost:8888/lab mode ignore
bindurl   localhost:8888/lab --mode=ignore <C-;> fillcmdline tab
bindurl   localhost:8888/lab --mode=ignore <C-'> fillcmdline tabopen
bindurl   localhost:8888/lab --mode=ignore <C-f> hint -t; mode ignore

seturl insperity.com noiframe true
seturl service-now.com noiframe true
seturl becu.org noiframe true
